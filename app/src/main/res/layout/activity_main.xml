<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_weight="1"
    android:background="@drawable/photo"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/showResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12pt"
        android:layout_weight="2"

        android:ems="10"
        android:gravity="right"
        android:hint="0"
        android:inputType="textPersonName"
        android:paddingTop="90pt"
        android:text="0"
        android:textSize="45sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"


            >

            <Button
                android:id="@+id/bu1"
                android:layout_width="40pt"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="buClean"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:backgroundTint="@color/teal_700" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="+/-"
                android:textSize="30sp"
                app:backgroundTint="@color/design_default_color_secondary_variant" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="40pt"
                android:layout_height="25pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="buPercent"
                android:text="%"
                android:textSize="30sp"
                app:backgroundTint="@color/teal_700" />

            <Button
                android:id="@+id/buDiv"
                android:layout_width="match_parent"
                android:layout_height="25pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="buOpEvent"
                android:text="รท"
                android:textSize="30sp"
                app:backgroundTint="@color/cardview_dark_background" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/design_default_color_on_primary">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu5"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="28dp"
                app:backgroundTint="@color/white" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu6"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="28dp"
                app:backgroundTint="@color/white" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu7"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="28dp"
                app:backgroundTint="@color/white" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/buMult"
                android:layout_width="match_parent"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:onClick="buOpEvent"
                android:text="ร"
                android:textSize="30sp"
                app:backgroundTint="@color/cardview_dark_background" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu9"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="28dp"
                app:backgroundTint="@color/white" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu10"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="28dp"
                app:backgroundTint="@color/white" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu11"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="28dp"
                app:backgroundTint="@color/white" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/buMinus"
                android:layout_width="match_parent"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:onClick="buOpEvent"
                android:text="-"
                android:textSize="30sp"
                app:backgroundTint="@color/cardview_dark_background" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu13"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="28dp"
                app:backgroundTint="@color/white" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu14"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="28dp"
                app:backgroundTint="@color/white" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu15"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="28dp"
                app:backgroundTint="@color/white" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/buSum"
                android:layout_width="match_parent"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:onClick="buOpEvent"
                android:text="+"
                android:textSize="30sp"
                app:backgroundTint="@color/cardview_dark_background" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/design_default_color_secondary"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/bu17"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:onClick="buNumberEvent"
            android:text="0"
            android:textSize="30sp"
            app:backgroundTint="@color/teal_700" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/bu18"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="buNumberEvent"
            android:text="."
            android:textSize="30sp"
            app:backgroundTint="@android:color/holo_blue_dark" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/buEqual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="buEqualEvent"
            android:text="="
            android:textSize="30sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/holo_orange_dark" />
    </LinearLayout>

</LinearLayout>